<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PartyTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#E91E63</item>
        <item name="colorPrimaryDark">@color/common_google_signin_btn_text_light</item>
        <item name="colorAccent">@color/common_google_signin_btn_text_light</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Button style. -->
    <style name="ButtonStyle">
        <item name="android:elevation">10dp</item>
        <item name="android:background">@android:drawable/screen_background_light_transparent</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
